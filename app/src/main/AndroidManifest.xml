<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sparksfoundation.mycredible">

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:debuggable="true"
        android:allowBackup="true"
        android:icon="@drawable/credible"
        android:label="@string/app_name"
        android:roundIcon="@drawable/credible"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".UserHomeActivity" />
        <activity android:name=".UserDetails.PersonalDetailsActivity" />
        <activity android:name=".UserDetails.ProfessionalDetailsActivity" />
        <activity android:name=".UserDetails.EducationDetailsActivity" />
    </application>

</manifest>